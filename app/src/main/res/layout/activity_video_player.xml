<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.android.videoplayer.ui.widget.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--需要一个父容器包裹，并且必须固定高度-->
    <FrameLayout
        android:id="@+id/player_container"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/image_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_player_cover"/>
        <com.android.iplayer.widget.VideoPlayer
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000"/>
    </FrameLayout>
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <LinearLayout
               android:id="@+id/danmu_content"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone">
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_margin="15dp"
                   android:layout_gravity="right">
                   <Switch
                       android:id="@+id/switch_danmu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:checked="true"/>
                   <TextView
                       android:id="@+id/tv_danmu"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="15dp"
                       android:textColor="#333333"
                       android:text="关闭弹幕"/>
               </LinearLayout>
               <Button
                   android:id="@+id/btn_send_danmu"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="20dp"
                   android:text="发送一条弹幕"/>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/controller_content"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone">
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:layout_marginTop="12dp"
                   android:text="解码器"
                   android:textColor="@color/menu_sub_title_color"
                   android:textStyle="bold"
                   android:textSize="15dp"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="33dp"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="12dp">
                   <TextView
                       android:id="@+id/btn_core_1"
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/bg_menu_left"
                       android:textColor="@color/menu_text_selector"
                       android:textSize="13dp"
                       android:text="MediaPlayer"
                       android:gravity="center"/>
                   <TextView
                       android:id="@+id/btn_core_2"
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/bg_menu_center"
                       android:textColor="@color/menu_text_selector"
                       android:textSize="13dp"
                       android:layout_marginLeft="-1dp"
                       android:text="IjkPlayer"
                       android:gravity="center"/>
                   <TextView
                       android:id="@+id/btn_core_3"
                       android:layout_width="90dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/bg_menu_right"
                       android:textColor="@color/menu_text_selector"
                       android:textSize="13dp"
                       android:layout_marginLeft="-1dp"
                       android:text="ExoPlayer"
                       android:gravity="center"
                       android:visibility="visible"/>
               </LinearLayout>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:layout_marginTop="12dp"
                   android:text="竖屏手势交互"
                   android:textColor="@color/menu_sub_title_color"
                   android:textStyle="bold"
                   android:textSize="15dp"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="33dp"
                   android:orientation="horizontal"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="12dp">
                   <TextView
                       android:id="@+id/touch_1"
                       android:layout_width="66dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/bg_menu_left"
                       android:textColor="@color/menu_text_selector"
                       android:textSize="13dp"
                       android:text="开启"
                       android:gravity="center"/>
                   <TextView
                       android:id="@+id/touch_2"
                       android:layout_width="66dp"
                       android:layout_height="match_parent"
                       android:background="@drawable/bg_menu_right"
                       android:textColor="@color/menu_text_selector"
                       android:textSize="13dp"
                       android:layout_marginLeft="-1dp"
                       android:text="关闭"
                       android:gravity="center"/>
               </LinearLayout>
               <com.android.videoplayer.video.ui.widget.PlayerMenuView
                   android:id="@+id/menu_view"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:visibility="visible"/>
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:text="测试播放地址"
                   android:textColor="@color/menu_sub_title_color"
                   android:textStyle="bold"
                   android:textSize="15dp"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="40dp"
                   android:orientation="horizontal"
                   android:layout_marginLeft="12dp"
                   android:layout_marginRight="12dp"
                   android:layout_marginTop="10dp">
                   <EditText
                       android:id="@+id/input"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="1"
                       android:hint="请粘贴或输入视频地址"
                       android:textColorHint="#666666"
                       android:textColor="#333333"
                       android:textSize="14dp"
                       android:gravity="center_vertical"
                       android:paddingLeft="10dp"
                       android:paddingRight="10dp"
                       android:background="@drawable/input_bg"/>
                   <TextView
                       android:id="@+id/play"
                       android:layout_width="68dp"
                       android:layout_height="match_parent"
                       android:layout_marginLeft="10dp"
                       android:textColor="#FFFFFF"
                       android:textSize="16dp"
                       android:text="播放"
                       android:gravity="center"
                       android:layout_gravity="center_vertical"
                       android:background="@drawable/bg_play"/>
               </LinearLayout>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="50dp"/>
           </LinearLayout>
           <Button
               android:id="@+id/btn_enter_picture"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="16dp"
               android:onClick="enterPicture"
               android:text="开启画中画"
               android:visibility="gone"/>
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</LinearLayout>